<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"
             x:Class="NotepadAndExplorer.Views.Page.NotepadView">
	
	<Grid ColumnDefinitions="*" RowDefinitions="320, 80">
		<TextBox Grid.Row="0" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding $parent[Window].DataContext.FileText}"/>
		<StackPanel Grid.Row="1">
			<Button Classes="B2" Content="Открыть" Command="{Binding $parent[Window].DataContext.SwitchToOpenFileViewModel}"/>
			<Button Classes="B2" Content="Сохранить" Command="{Binding $parent[Window].DataContext.SwitchToSaveFileViewModel}"/>
		</StackPanel>
	</Grid>
</UserControl>
